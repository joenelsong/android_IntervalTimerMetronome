<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:id="@+id/controlLayout"
    android:layout_height="wrap_content"
    android:background="#0f0b29f5"
    android:layout_gravity="center_vertical|center_horizontal">

    <!-- Queue Switch -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".15"
        android:id="@+id/name2"
        android:layout_gravity="center_vertical|center_horizontal">

        <Switch
            android:id="@+id/queueSwitch"
            android:checked="true"
            android:enabled="true"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>

    <!-- Minutes and Seconds -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".3"
        android:id="@+id/Time"
        android:layout_gravity="center_vertical|center_horizontal">

        <EditText
            android:layout_width="0dp"
            android:layout_weight=".45"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="2"
            android:id="@+id/editTextMinutes"
            android:text="00"
            android:textSize="22sp"
            android:layout_gravity="center_vertical|center_horizontal" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight=".1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=":"
            android:id="@+id/textViewColon"
            android:textSize="22sp" />

        <EditText
            android:layout_width="0dp"
            android:layout_weight=".45"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="2"
            android:id="@+id/editTextSeconds"
            android:text="5"
            android:textSize="22sp" />
    </LinearLayout>

    <!-- Beats Per MInute -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".15"
        android:id="@+id/name"
        android:layout_gravity="center_vertical|center_horizontal">

        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:inputType="number"
            android:id="@+id/paceText"
            android:text="60"
            android:maxLength="3"
            android:textSize="22sp"/>
        <!-- android:background="@drawable/edt_bg_selector"/> -->

    </LinearLayout>

    <!-- Time Signature -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/timeSignature"
        android:layout_weight=".35"
        android:soundEffectsEnabled="true"
        android:layout_gravity="center_vertical|center_horizontal"
        android:padding="0dp"
        android:paddingBottom="0dp"
        android:paddingEnd="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingStart="0dp"
        android:paddingTop="0dp"
        android:layout_margin="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp">

        <Spinner
            android:id="@+id/rythmspinner1"
            android:entries="@array/time_signature_numerator"
            android:layout_height="fill_parent"
            android:layout_weight=".45"
            android:layout_width="0dp"
            android:dropDownSelector="?android:attr/listChoiceBackgroundIndicator"
            android:dropDownWidth="30dp"
            android:padding="0dp"
            android:paddingBottom="0dp"
            android:paddingEnd="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingStart="0dp"
            android:paddingTop="0dp"
            android:contextClickable="true" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".1"
            android:text="/"
            android:id="@+id/textView4"
            android:textSize="22sp"
            android:layout_marginLeft="0dp" />

        <Spinner
            android:id="@+id/rythmspinner2"
            android:entries="@array/time_signature_denominator"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_marginLeft="0dp"
            android:layout_weight=".45"
            android:dropDownWidth="30dp"
            android:paddingBottom="0dp"
            android:paddingEnd="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingStart="0dp"
            android:paddingTop="0dp"
            android:padding="0dp"
            android:textSize="20dp" />

    </LinearLayout>

